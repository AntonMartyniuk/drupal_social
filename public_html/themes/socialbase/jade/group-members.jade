extends ./layout/base-lu.jade

block title
  title Happy Campers

block pagetitle
  
  .container.hero-container
    .cover.cover-img.hidden-xs(style="background-image: url('content/images/group-hero.jpg')")
      .hero-action-button
        a.waves-effect.waves-light.btn.brand-user.btn-floating(href='group-edit.html')
          i.material-icons mode_edit
      .cover-wrap          
        h1.page-title Happy Campers
        p.page-title 21 members
        .hero-footer
          .row.row-md-center
            .col-xs-12.col-md-6.col-md-offset-3 Integer posuere erat a ante venenatis dapibus posuere velit aliquet. Aenean eu leo quam. Pellentesque ornare sem lacinia quam venenatis vestibulum.
            .col-xs-12.col-md-3
              .btn-group
                button.btn.btn-accent.btn-lg.btn-raised.dropdown-toggle(type="button", autocomplete="off", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false") Joined        
                  span.caret
                ul.dropdown-menu
                  li
                    a(href="#") Leave group  
    
  .container  
    .visible-xs-block.section
      a.btn.btn-raised.btn-user(href="group-stream.html")
        i.material-icons.pull-left keyboard_arrow_left
        | Back to group stream

  .container.hero-container  
    .brand-secondary.z-depth-1.hidden-xs
      nav(role="navigation" aria-label="Tabs")
        h2.visually-hidden Secondary navigation
        ul.nav.nav-tabs.tabs-center.brand-secondary.nav-tabs--xl
          li.hidden-xs
            a(href='group-stream.html') Stream
          li
            a(href='group-topics.html') Topics
          li
            a(href='group-events.html') Events
          li.active
            a(href="group-members.html") Members
              span.visually-hidden (active tab)
      
block content
      
  .row
    .col-xs-12.col-sm-12
      h4.section-title Members of Happy Campers

    .col-xs-12.col-sm-8
      include molecules/_member1.jade
      include molecules/_member2.jade
      include molecules/_member3.jade
      include molecules/_member4.jade
      include molecules/_member5.jade
