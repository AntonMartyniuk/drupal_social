extends ./layout/base-lu.jade

block title
  title Amsterdam meetup

block pagetitle
  
  .cover.container.cover-img(style="background-image: url('content/images/event-hero.jpg')")  
    .cover-wrap   
      a.right.waves-effect.waves-light.btn.btn-raised.style-default-dark.btn-floating(href='#!')
        i.material-icons mode_edit        
      h1.page-title Amsterdam Meetup
      p
        time.eventdate.updated June 6 2016 - 12:00 
        span @ GoalGorilla, Amsterdam
      .hero-footer
        img.img-circle.img-bordered.img-small(src='content/images/avatar0.jpg')
        .small.margin-top-m
          div(itemprop="author", itemscope="", itemtype="http://schema.org/Person") published by
          a.author(itemprop="url", rel="author", href="/author/rachelandrew") Rachel Andrew
    
    .primary-action-region
      p.small.text-default-bright.hidden You have enrolled to this event.
      button#enrollButton.btn.btn-accent.btn-raised(type="button", autocomplete="off", data-toggle-text="Cancel enrollment") Enroll this event
      
block secondary_navigation
  .container.style-default-bright
    nav(role="navigation" aria-label="Tabs")
      h2.visually-hidden Secondary navigation
      ul.nav.nav-tabs.tabs-center.style-default-bright.nav-tabs--xl
        li
          a(href='event.html') Details
        li.active
          a(href="event-enrollments.html") Enrollments
            span.visually-hidden (active tab)
      
block content
      
  .row
    .col-sm-12
      h4.section-title Event enrollments
    
    .col-sm-9
      include molecules/_member1.jade
      include molecules/_member2.jade
      include molecules/_member3.jade
      include molecules/_member4.jade
      include molecules/_member5.jade

block scriptinline
  script.
    jQuery(document).ready(function($){
      $('#enrollButton').on('click', function () {
        
        // button text will toggle "Cancel enrollment"
        var buttonState = $(this).data("toggle-text");
        $(this).data('toggle-text', $(this).text()).text(buttonState);
        
        // button active state will toggle
        $(this).toggleClass('active') 
        
        // show / hide previous text element
        $(this).prev('p').toggleClass('hidden');
      })  
    });
