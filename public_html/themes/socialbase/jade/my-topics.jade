extends ./layout/base-lu.jade

block title
  title Michael Angarano

block pagetitle
  .block-hero.only-desktop.profile-cover
    .cover-wrap
      img.circle.img-bordered(src='content/images/avatar0.jpg')
      h1.page-title.h2 Michael Angarano
      button.btn.btn-flat.btn--default-bright
        i.material-icons.left check
        | Following
      
block secondary_navigation
  .container
    .row.hidden-desktop.section-header
      .col.s12
        a.btn.btn-raised.btn--default-bright 
          i.material-icons.left keyboard_arrow_left
          | Back to timeline

  .style-secondary.only-desktop
    .container
      nav(role="navigation" aria-label="Tabs")
        h2.visually-hidden Secondary navigation
        ul.nav.nav-tabs.tabs-center.style-secondary.nav-tabs--xl
          li
            a(href="#").disabled Timeline  
          li
            a(href="#") Information
          li.active
            a(href='my-topics.html') Topics
              span.visually-hidden (active tab)
          li
            a(href="my-events.html") Events
          li
            a(href="#") Groups
      
block content
  
  .row
  
    .col.s12
      h2.h3.section-title My topics
    
    .col.s12.l3.right.margin-bottom-l
      a.waves-effect.waves-light.btn.btn--block.btn--default-dark.btn-raised(href='#!') 
        i.material-icons.left add
        | Add a topic

      a.btn.btn--block.btn--primary.btn-raised.hidden-desktop.js-open-canvas
        i.material-icons.left tune
        | Filters
      
      .off-canvas.off-canvas-right.off-canvas-small-only.desktop-card
        .offcanvas-head
          header.card__label filter
          .offcanvas-tools.hidden-desktop
            .js-close-canvas.btn-icon-toggle.btn-default-light.right
              i.material-icons close
        
        .offcanvas-body
          form
            .row
              .col.s12
                .form-item
                  label.form__label Topic type
                  select.browser-default(onchange="enableMe('reset-button', this)")
                    option(value="", selected="") All types
                    option(value="blog") Blog
                    option(value="discussion") Discussion
                    option(value="topic") Topic
            .row
              .col.s12
                .form-item
                  label.form__label Status
                  select.browser-default(onchange="enableMe('reset-button', this)")
                    option(value="", selected="") All statusses
                    option(value="published") Published
                    option(value="unpublished") Unpublished
              
            .row
              .col.s12
                .form-actions.form-wrapper.right-align
                  input#reset-button.btn.btn-flat.disabled(type="submit", value="Reset")

    .col.s12.l9
      .card--wrapper
        include molecules/_topic1.jade
        include molecules/_topic2.jade
        include molecules/_topic3.jade
        include molecules/_topic4.jade
        
      ul.pagination
        li.pager__item.pager__item--previous.disabled
          a(href="#0", aria-label='Previous')    
            span(aria-hidden="true") 
              i.material-icons chevron_left
        li.pager__item.active
          a(href="#1") 1
        li.pager__item 
          a(href="#1") 2
        li.pager__item 
          a(href="#1") 3          
        li.pager__item 
          a(href="#1") 4
        li.pager__item.pager__item--next
          a(href='#', aria-label='Next')
            span(aria-hidden="true")
              i.material-icons chevron_right

block scriptinline  
  
  script.
    function enableMe() {
      jQuery('#reset-button').removeClass('disabled');
    }
