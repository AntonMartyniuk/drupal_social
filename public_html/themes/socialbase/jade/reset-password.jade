extends ./layout/base-an.jade

block title
  title Reset your password

block pagetitle
  .page-title 
    .container
      h1 Reset your password


block secondary_navigation

  nav(role="navigation" aria-label="Tabs")
    h2.visually-hidden Primary tabs
    ul.tabs.primary
      li
        a(href="login.html") Log in
      li
        a(href="sign-up.html") Sign up
      li.is-active
        a.is-active(href='reset-password.html') Reset password
        span.visually-hidden (active tab)

block content

  .row
    .col.s12.l9
      .card.form-card

        form.user-pass-form(accept-charset='UTF-8')
          .form__item.form__type-textfield
            .input-field
              input#edit-name.form-text(type='text', autocorrect='off', autofocus='autofocus', required='required')
              label.form-required(for='edit-name') Username or email address
              .form__description Password reset instructions will be sent to your registered email address.
              
          #edit-actions.form-actions.form-wrapper
            input#edit-submit.waves-effect.waves-light.btn.form__submit(type='submit', value='Submit')
