extends ./layout/base-lu.jade

block title
  title Michael Angarano



block pagetitle
  .block-hero.only-desktop
    .container
      .row
        .col.s12.center
          img.circle.img-bordered(src='content/images/avatar0.jpg')
          h1.page-title.h2 Michael Angarano
          button.btn.btn--default-bright Following
      
block secondary_navigation
  .container
    .row.hidden-desktop.section-header
      .col.s12
        a.btn.btn-raised.btn--default-bright 
          i.material-icons.left keyboard_arrow_left
          | Back to timeline

  .style-secondary.only-desktop
    .container
      nav(role="navigation" aria-label="Tabs")
        h2.visually-hidden Secondary navigation
        ul.nav.nav-tabs.nav-justified.style-secondary.nav-tabs--xl
          li
            a(href="#") Timeline  
          li
            a(href="#") Information
          li
            a(href='my-topics.html') Topics
          li.active
            a(href='my-events.html') Events
              span.visually-hidden (active tab)
          li
            a(href="#") Groups
      
block content
  
  .row
  
    .col.s12
      h2.h3.section-title My events
    
    .col.s12.l3.right.margin-bottom-l
      a.waves-effect.waves-light.btn.btn--block.btn--default-dark.btn-raised(href='#!') 
        i.material-icons.left add
        | Add an event

      a.btn.btn--block.btn--primary.btn-raised.hidden-desktop.js-open-canvas
        i.material-icons.left tune
        | Filters
      
      .off-canvas.off-canvas-right.off-canvas-small-only.desktop-card
        .offcanvas-head
          header.card__label filter
          .offcanvas-tools.hidden-desktop
            .js-close-canvas.btn.btn-flat.btn-icon-toggle.btn-default-light.right
              i.material-icons close
    
        .offcanvas-body
          form
            .row
              .col.s12
                .form__item.form__item-radios
                  label.form__label Event status 
                  .form__radios
                    .form__item.form__item-radio
                      input.form__radio#radio1(name='event', type='radio', checked)
                      label.label--option(for='radio1') Upcoming
                    .form__item.form__item-radio
                      input.form__radio#radio2(name='event', type='radio')
                      label.label--option(for='radio2') Past 
                    .form__item.form__item-radio
                      input.form__radio#radio3(name='event', type='radio')
                      label.label--option(for='radio3') Unpublished
            .row.hidden-desktop
              .col.s12
                .form-actions.form-wrapper.clearfix
                  button.btn.js-close-canvas.right Done

    .col.s12.l9
      .card--wrapper
        include molecules/_event1.jade
        include molecules/_event2.jade
        include molecules/_event3.jade
        include molecules/_event4.jade
        
      ul.pagination
        li.pager__item.pager__item--previous.disabled
          a(href="#0", aria-label='Previous')    
            span(aria-hidden="true") 
              i.material-icons chevron_left
        li.pager__item.active
          a(href="#1") 1
        li.pager__item 
          a(href="#1") 2
        li.pager__item 
          a(href="#1") 3          
        li.pager__item 
          a(href="#1") 4
        li.pager__item.pager__item--next
          a(href='#', aria-label='Next')
            span(aria-hidden="true")
              i.material-icons chevron_right
