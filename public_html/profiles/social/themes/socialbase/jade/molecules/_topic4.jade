.card.card--teaser.card-with-actionbar
  a.card-image(href="topic.html")
    .teaser-type
      img(src='images/icon-topic.svg', alt='')
    img(src='content/images/people3-square.jpg', alt='')
  .card-body
    h4.card-title
      a(href="topic.html") Top 10 zoos to visit in 2016
    p.text-grey-dark.no-margin
      if user == "isAnonymous"
        | Amanda Boxer 
      else
        a(href="other-stream.html") Amanda Boxer
      | &bullet; 12 apr 2016
    p.no-margin
      i.material-icons label
      | &nbsp;
      span.inline-center Topic
    .card-actionbar
      .badge.badge-gray-lighter.badge--toggle
        label
          input(type='checkbox')
          i.material-icons public        
          span.badge--toggle__label public
      a.btn.btn-flat.pull-right(href="topic.html") Read more
